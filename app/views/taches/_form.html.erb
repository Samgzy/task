<%= form_for @tache do |f| %>
  <div class="form-group">
    <%= f.label :nom %>
    <%= f.text_field :nom, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :societe %>
    <%= f.text_field :societe, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :montant %>
    <%= f.text_field :montant, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :date %>
    <%= f.text_field :date, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :notes %>
    <%= f.text_area :notes, class: "form-control" %>
  </div>
  <%= f.submit "Enregistrer frais", class: "btn btn-primary" %>
<% end %>
